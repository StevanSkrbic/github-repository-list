{
  "name": "github-repository-list",
  "version": "0.1.1",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.3.16",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "graphql": "^15.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "eslint src/",
    "prettier": "prettier -c src/",
    "prettier:apply": "prettier --write --loglevel silent src/**/*.{ts,tsx}",
    "apollo:generate": "apollo codegen:generate --target typescript --excludes=node_modules/* --includes=**/**/queries/*.ts --endpoint https://api.github.com/graphql --header \"Authorization: bearer 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\" --tagName=gql --outputFlat src/models --passthroughCustomScalars --customScalarsPrefix Github",
    "release": "release-it"
  },
  "devDependencies": {
    "eslint": "^7.26.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "release-it": "^14.6.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "globals": {
      "debug": true
    },
    "parser": "babel-eslint",
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    },
    "extends": [
      "plugin:react/recommended",
      "airbnb",
      "airbnb/hooks",
      "prettier",
      "plugin:prettier/recommended",
      "plugin:cypress/recommended",
      "react-app",
      "react-app/jest"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "prettier"
    ],
    "rules": {
      "camelcase": "off",
      "no-mixed-operators": "off",
      "react/jsx-filename-extension": [
        2,
        {
          "extensions": [
            ".ts",
            ".tsx"
          ]
        }
      ],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "ts": "never",
          "tsx": "never"
        }
      ],
      "prettier/prettier": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/jsx-props-no-spreading": "off",
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off",
      "import/prefer-default-export": "off",
      "react/no-array-index-key": "warn",
      "no-console": [
        "warn",
        {
          "allow": [
            "error"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.*",
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "quoteProps": "consistent",
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "useTabs": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.+(ts|tsx)": [
      "pretty-quick --staged",
      "eslint --fix"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
